<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Weapon_FireBomb"]/recipeMaker</xpath>
    <value>
      <productCount>10</productCount>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Weapon_FireBomb"]</xpath>
    <value>
      <stackLimit>10</stackLimit>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Weapon_FireBomb"]/statBases</xpath>
    <value>
      <MarketValue>19</MarketValue>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VWE_Weapon_FireBomb"]/statBases/Mass</xpath>
    <value>
      <Mass>0.1</Mass>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VWE_Weapon_FireBomb"]/verbs/li/verbClass</xpath>
    <value>
      <verbClass>GNATFramework.Verb_LaunchProjectileOneUse</verbClass>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VWE_Weapon_FireBomb"]</xpath>
    <value>
      <li Class="GNATFramework.GenerateWithEquip">
        <generateEquip>
          <VWE_Weapon_FireBomb>5~10</VWE_Weapon_FireBomb>
        </generateEquip>
      </li>
      <!-- <li MayRequire="LimeTreeSnake.Ammunition" Class="Ammunition.DefModExtensions.AmmunitionExtension" /> -->  
    </value>
  </Operation>

  <!-- Yayo Combat Compat -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Weapon_FireBomb"]/weaponTags</xpath>
    <value>
      <li MayRequire="Mlie.YayosCombat3">ammo_none</li>
    </value>
  </Operation>

</Patch>